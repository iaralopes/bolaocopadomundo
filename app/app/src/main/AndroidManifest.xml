<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.puc.bolaocopamundo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.CadastroUsuarioActivity" />
        <activity android:name=".activity.BoloesActivity" />
        <activity android:name=".activity.CadastroBolaoActivity" />
        <activity android:name=".activity.BolaoPrincipalActivity" />
        <activity android:name=".activity.ConvidarMembroActivity" />
        <activity android:name=".activity.BolaoResultados" />
        <activity android:name=".activity.BolaoRankActivity" />
        <activity android:name=".activity.MembrosActivity" />
        <activity android:name=".activity.VersaoActivity" />
        <activity android:name=".activity.PerfilActivity" />
        <activity android:name=".activity.RegulamentoActivity" />
        <activity android:name=".activity.BolaoRankMembroApostasActivity"></activity>
    </application>

</manifest>